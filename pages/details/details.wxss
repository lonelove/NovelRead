.container{
    padding: 0 0;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.intro-meau{
    width: 100%;
    white-space: nowrap;
}

.intro-meau__item{
    margin: 20rpx 20rpx;
    display: inline-block;
}


.item{
    width: 100%;
    display: flex;
}
.item-book{
    width: 100%;
    height: 260rpx;
    border-bottom: 2rpx solid #cccccc;
    display: flex;
}
image{
    width:154rpx;
    height: 220rpx;
    margin: 20rpx 20rpx;
}
.item-book-body{
    width: 70%;
    height: 220rpx;
    margin: 20rpx 20rpx;
    display: flex;
    flex-direction: column;
}
.text-title{
    width: 100%;
    height: 50rpx;
    font-size: 1.1rem;
    font-weight: bold;
    margin: 8rpx 0;
    text-overflow:ellipsis;
    white-space:nowrap;
}
.text-intro{
    width: 100%;
    height: 120rpx;
    font-size: 0.6rem;
    margin: 8rpx 0;
    color: #999999;
    display: -webkit-box ;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3; 
}
.text-author{
    width: 100%;
    height: 50rpx;
    font-size: 0.7rem;
    margin: 8rpx 0;
    color: #999999;
}
.hover-name{
    background-color: #e6e6e6;
}

.weui-loading {
    width: 30rpx;
    height: 30rpx;
    display: inline-block;
    vertical-align: middle;
    -webkit-animation: weuiLoading 1s steps(12, end) infinite;
    animation: weuiLoading 1s steps(12, end) infinite;
    background-size: 100%;
}

.load-more-wrap {
    width: 100%;
    text-align: center;
    padding: 10rpx 20rpx 20rpx 20rpx;
}

.load-content {
    padding: 5rpx;
    color: #666;
    font-size: 28rpx;
}
