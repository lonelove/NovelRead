.container{
    width: 100%;
    height: 100%;
    background-color: #f5f5ee;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    padding: 0 0;
}

.item{
    width: 100%;
    height: 50%;
    border-bottom: 4rpx solid #e6e6e6;
    padding-bottom: 20rpx;
}

.item-text{
    margin: 20rpx 22rpx;
}

.item-classify{
    width: 100%;
    height: 100%;
    display: flex;
    flex-flow: row wrap;
    justify-content: space-around;
    align-items: center;
}

.item-classify-name{
    width:180rpx;
    height: 60rpx;
    text-align: center;
    background: white;
    margin: 10rpx 10rpx;
    padding: 10rpx 10rpx;
    padding-top: 30rpx; 
    border: 2rpx solid #e6e6e6;
}
.hover-name{
    background-color: #e6e6e6;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}